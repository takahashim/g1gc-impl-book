\usepackage{multicol}

\def\@makechapterhead#1{%
  \vspace*{2\Cvs}% 欧文は50pt
  {\parindent \z@ \raggedright \normalfont
    \ifnum \c@secnumdepth >\m@ne
      \if@mainmatter
        \hfill{\huge\headfont \@chapapp\thechapter\@chappos}
        \par\nobreak
        \vskip \Cvs % 欧文は20pt
      \fi
    \fi
    \interlinepenalty\@M
    \hfill{\Huge \headfont #1\par\nobreak}
    \vskip 2\Cvs}} % 欧文は40pt

